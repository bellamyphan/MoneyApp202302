<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="gui.TransactionMenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox alignment="CENTER" spacing="20.0">
        <VBox alignment="CENTER" spacing="20.0">
            <Label>Transaction Basic Menu</Label>
            <Button onAction="#addATransactionOnAction">Add a transaction</Button>
            <Button onAction="#modifyATransactionOnAction">Modify a transaction</Button>
            <Button onAction="#deleteATransactionOnAction">Delete a transaction</Button>
            <Button onAction="#markATransactionRepeatable">Mark a transaction repeatable</Button>
        </VBox>
        <VBox>
            <Label>Transaction Search Menu</Label>
        </VBox>
        <VBox>
            <Label>Transaction Show Menu</Label>
        </VBox>
    </HBox>
    <Button fx:id="exitThisMenuButton" onAction="#exitThisMenuOnAction">Exit this menu</Button>
</VBox>
