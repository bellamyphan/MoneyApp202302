    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Button text="Show all banks" onAction="#onShowAllBanksClick"/>
    <Button text="Show all bank balances" onAction="#onShowAllBankBalancesClick"/>
