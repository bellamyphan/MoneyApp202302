<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="gui.transaction.AddATransactionController"
          alignment="CENTER" hgap="20" vgap="20">

    <Text GridPane.rowIndex="0" GridPane.columnIndex="0" text="Id"/>
    <TextField GridPane.rowIndex="0" GridPane.columnIndex="1" fx:id="idTextField" text="Auto-generated id"
               editable="false"/>

    <Text GridPane.rowIndex="1" GridPane.columnIndex="0" text="Type"/>
    <ComboBox GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="typeComboBox" editable="true"
              promptText="Select type" onAction="#typeComboBoxOnAction"/>

    <Text GridPane.rowIndex="2" GridPane.columnIndex="0" text="Date"/>
    <DatePicker GridPane.rowIndex="2" GridPane.columnIndex="1" fx:id="datePicker" promptText="yyyy-mm-dd"/>

    <Text GridPane.rowIndex="3" GridPane.columnIndex="0" text="Amount"/>
    <TextField GridPane.rowIndex="3" GridPane.columnIndex="1" fx:id="amountTextField" promptText="Enter USD amount"/>

    <Text GridPane.rowIndex="4" GridPane.columnIndex="0" text="Note"/>
    <TextField GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.columnSpan="2" fx:id="noteTextField"
               promptText="Enter note here"/>

    <Text GridPane.rowIndex="5" GridPane.columnIndex="0" text="Name"/>
    <TextField GridPane.rowIndex="5" GridPane.columnIndex="1" fx:id="nameTextField" promptText="Enter name here"/>

    <Text GridPane.rowIndex="6" GridPane.columnIndex="0" text="Location"/>
    <ComboBox GridPane.rowIndex="6" GridPane.columnIndex="1" fx:id="stateComboBox"
               promptText="Enter state"/>
    <ComboBox GridPane.rowIndex="6" GridPane.columnIndex="2" fx:id="cityComboBox"
               promptText="Enter city"/>

    <Text GridPane.rowIndex="7" GridPane.columnIndex="0" text="Bank"/>
    <ComboBox GridPane.rowIndex="7" GridPane.columnIndex="1" fx:id="primaryBankComboBox"
               promptText="Select primary bank"/>
    <ComboBox GridPane.rowIndex="7" GridPane.columnIndex="2" promptText="Select secondary bank"/>

    <Text GridPane.rowIndex="8" GridPane.columnIndex="0" text="Is pending?"/>
    <ComboBox GridPane.rowIndex="8" GridPane.columnIndex="1" fx:id="isPendingComboBox" promptText="Select"/>

    <Button GridPane.rowIndex="9" GridPane.columnIndex="0" text="Review" onAction="#reviewOnAction"/>
    <Button GridPane.rowIndex="9" GridPane.columnIndex="1" fx:id="confirmButton" text="Confirm" visible="false"/>
    <Button GridPane.rowIndex="9" GridPane.columnIndex="2" text="Go back" onAction="#goBackOnAction"/>
    <Text GridPane.rowIndex="10" GridPane.columnIndex="1" fx:id="feedBackText"/>

</GridPane>
