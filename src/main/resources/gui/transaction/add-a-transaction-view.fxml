<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="gui.transaction.AddATransactionController"
          alignment="CENTER" hgap="20" vgap="20">

    <Text GridPane.rowIndex="0" GridPane.columnIndex="0" text="Id"/>
    <TextField GridPane.rowIndex="0" GridPane.columnIndex="1" fx:id="idTextField" text="Auto-generated id"
               disable="true"/>

    <Text GridPane.rowIndex="1" GridPane.columnIndex="0" text="Type"/>
    <ComboBox GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="typeComboBox" editable="true"
              promptText="Select type" onAction="#typeComboBoxOnAction"/>
    <Text GridPane.rowIndex="1" GridPane.columnIndex="2" fx:id="typeFeedbackText"/>

    <Text GridPane.rowIndex="2" GridPane.columnIndex="0" text="Date"/>
    <DatePicker GridPane.rowIndex="2" GridPane.columnIndex="1" fx:id="datePicker" promptText="yyyy-mm-dd"/>

    <Text GridPane.rowIndex="3" GridPane.columnIndex="0" text="Amount"/>
    <TextField GridPane.rowIndex="3" GridPane.columnIndex="1" fx:id="amountTextField" promptText="Enter USD amount"/>

    <Text GridPane.rowIndex="4" GridPane.columnIndex="0" text="Note"/>
    <ComboBox GridPane.rowIndex="4" GridPane.columnIndex="1" fx:id="noteComboBox"
               promptText="Select or enter note" editable="true"/>

    <Text GridPane.rowIndex="5" GridPane.columnIndex="0" text="Name"/>
    <ComboBox GridPane.rowIndex="5" GridPane.columnIndex="1" fx:id="nameComboBox" promptText="Enter name here"
              editable="true"/>
    <Button GridPane.rowIndex="5" GridPane.columnIndex="2" fx:id="typeFilterButton" text="Filter by Type" disable="true"
            onAction="#typeFilterButtonOnAction"/>

    <Text GridPane.rowIndex="6" GridPane.columnIndex="0" text="Location"/>
    <ComboBox GridPane.rowIndex="6" GridPane.columnIndex="1" fx:id="stateComboBox" promptText="Enter state name/code"
              editable="true" onAction="#stateComboBoxOnAction"/>
    <ComboBox GridPane.rowIndex="6" GridPane.columnIndex="2" fx:id="cityComboBox" promptText="Enter city"
              editable="true" disable="true" onAction="#cityComboBoxOnAction"/>

    <Text GridPane.rowIndex="7" GridPane.columnIndex="0" text="Bank"/>
    <ComboBox GridPane.rowIndex="7" GridPane.columnIndex="1" fx:id="primaryBankComboBox"
               promptText="Select primary bank" onAction="#primaryBankComboBoxOnAction"/>
    <ComboBox GridPane.rowIndex="7" GridPane.columnIndex="2" fx:id="secondaryBankComboBox"
              promptText="Select secondary bank" disable="true"/>
    <Text GridPane.rowIndex="7" GridPane.columnIndex="3" fx:id="bankFeedbackText"/>

    <Text GridPane.rowIndex="8" GridPane.columnIndex="0" text="Is pending?"/>
    <ComboBox GridPane.rowIndex="8" GridPane.columnIndex="1" fx:id="isPendingComboBox" promptText="Select"/>

    <Button GridPane.rowIndex="9" GridPane.columnIndex="0" text="Review" onAction="#reviewButtonOnAction"/>
    <Button GridPane.rowIndex="9" GridPane.columnIndex="1" fx:id="confirmButton" text="Confirm" visible="false"
            onAction="#confirmButtonOnAction"/>
    <Button GridPane.rowIndex="9" GridPane.columnIndex="2" text="Go back" onAction="#goBackButtonOnAction"/>
    <Text GridPane.rowIndex="10" GridPane.columnIndex="1" fx:id="finalFeedbackText"/>

</GridPane>
